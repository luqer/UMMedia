<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/picture"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/audio"
        android:text="@string/picture"
        android:textSize="24sp"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/main_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/internal_path"
        android:layout_marginTop="60dp"
        android:layout_marginStart="60dp"/>
    <TextView
        android:id="@+id/audio"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/picture"
        app:layout_constraintRight_toLeftOf="@+id/video"
        android:text="@string/audio"
        android:textSize="24sp"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/main_background"
        app:layout_constraintTop_toTopOf="@+id/picture" />
    <TextView
        android:id="@+id/video"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/audio"
        app:layout_constraintRight_toLeftOf="@+id/install_app"
        android:text="@string/video"
        android:textSize="24sp"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/main_background"
        app:layout_constraintTop_toTopOf="@+id/picture" />
    <TextView
        android:id="@+id/install_app"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/video"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/install_package"
        android:textSize="24sp"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/main_background"
        app:layout_constraintTop_toTopOf="@+id/picture"
        android:layout_marginEnd="60dp"/>
    <TextView
        android:id="@+id/internal_path"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/local_storage"
        android:text="@string/internal_path"
        android:textSize="24sp"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/main_background"
        app:layout_constraintTop_toBottomOf="@+id/picture"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="60dp"/>
    <TextView
        android:id="@+id/local_storage"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/internal_path"
        app:layout_constraintRight_toLeftOf="@id/network_sharing"
        android:text="@string/local_storage"
        android:textSize="24sp"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/main_background"
        app:layout_constraintTop_toBottomOf="@+id/picture"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"/>
    <TextView
        android:id="@+id/network_sharing"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/local_storage"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/network_sharing"
        android:textSize="24sp"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/main_background"
        app:layout_constraintTop_toBottomOf="@+id/picture"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>